<Window x:Class="CitadelsGame.ShowMessageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ShowMessageWindow" Height="405" Width="265" Background="White" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*" />
            <RowDefinition Height="326*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="12,12,80,0" Name="textBlock1" TextWrapping="Wrap"  Height="40" VerticalAlignment="Top" Text="目前玩家:" Grid.RowSpan="2" >
            <TextBlock.BitmapEffect>
                <OuterGlowBitmapEffect GlowColor="Red"></OuterGlowBitmapEffect>
            </TextBlock.BitmapEffect>
        </TextBlock>
        
        <Image Margin="12,10,12,12" Name="image1" Stretch="Fill" Grid.Row="1" />
        <TextBlock Grid.Row="1" Margin="93,122,22,124" Name="tbState" Foreground="Red" FontSize="30" >
            <TextBlock.RenderTransform>
                <RotateTransform Angle="25"></RotateTransform>
            </TextBlock.RenderTransform>
        </TextBlock>
            
    </Grid>
</Window>
